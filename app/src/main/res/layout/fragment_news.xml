<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageFragmentNews"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textFragmentNewsHeading"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:fontFamily="@font/armata"
            android:text="Heading"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textFragmentNewsDescription"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:fontFamily="@font/armata"
            android:text="description"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textFragmentNewsDetails"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/armata"
            android:text="Credits: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textFragmentRelatedNewsHeader"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/armata"
            android:text="Related News"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRelatedNews"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:orientation="vertical" />
    </LinearLayout>

</FrameLayout>